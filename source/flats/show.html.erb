<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.picture %>'); height: 50vh; background-position: center;">
</div>
<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-md-6 text-center">
      <%= image_tag flat.owner_picture, class: "avatar-large" %>
      <h2><%= flat.owner_name %></h2>
      <p><%= flat.description %></p>
      <p><%= flat.city %></p>
    </div>
    <div class="col-xs-12 col-md-6 wrapper-grey text-center">
      <h2>Book this flat</h2>
      <form action="#" class="form-inline">
        <input type="text" class="form-control input-md" placeholder="checkin">
        <input type="text" class="form-control input-md" placeholder="checkout">
        </form>
        <form action="#" class="form-inline">
        <select name="" id="" class="form-control input-md">
          <option value="1">1 person</option>
          <option value="2">2 persons</option>
          <option value="3">3 persons</option>
        </select>
        <input type="submit" class="btn btn-primary btn-md" value="Search">
      </form>
    </div>
  </div>
</div>


